<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="580dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textColor="@color/default_background"
            android:textStyle="bold"
            android:text="ACCEDE A TU CUENTA"
            android:textSize="15sp"
            android:layout_gravity="center"
            app:cornerRadius="19dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            app:iconTint="@color/default_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="CREA UNA CUENTA EN JESSMI"
            android:textColor="@color/default_background"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="center"
            app:cornerRadius="19dp"
            app:icon="@drawable/ic_signup"
            app:iconGravity="textStart"
            app:iconTint="@color/default_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuest"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            app:cornerRadius="19dp"
            android:backgroundTint="@color/jessmi_grey"
            android:textColor="@color/jessmi_yellow"
            android:textStyle="bold"
            android:text="SIGUE COMO INVITADO"
            app:icon="@drawable/ic_guest"
            app:iconGravity="textStart"
            app:iconTint="@color/jessmi_yellow"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>