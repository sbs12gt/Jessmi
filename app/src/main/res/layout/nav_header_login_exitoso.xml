<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        android:src="@drawable/user_jess" />


    <TextView
        android:id="@+id/perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PERFIL DEL USUARIO:"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <View
        android:id="@+id/separacion2"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="@id/perfil"/>

    <TextView
        android:id="@+id/etiquetanombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nombres:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/separacion2"/>
    <TextView
        android:id="@+id/perfilnombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Sebastian Smith"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/etiquetanombres"/>

    <TextView
        android:id="@+id/etiquetaapellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Apellidos:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/perfilnombres"/>
    <TextView
        android:id="@+id/perfilapellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Indigoyen Zea"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/etiquetaapellidos"/>

    <TextView
        android:id="@+id/etiquetacorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Correo ElectrÃ³nico:"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/perfilapellidos"/>
    <TextView
        android:id="@+id/perfilcorreo"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="sebastian2004@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/etiquetacorreo"/>
</LinearLayout>